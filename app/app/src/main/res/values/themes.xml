<resources>

    <!-- Splash screen theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/dark_gray</item>
        <item name="postSplashScreenTheme">@style/Theme.SubscriptionsManager</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.SubscriptionsManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkest_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/dark_gray</item>
    </style>
    
    <!-- Button material text icon theme. -->
    <style
        name="Navigation_button_material_text_icon"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/green</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <!-- Alert dialog delete subscription theme. -->
    <style name="Alert_dialog_delete_subscription">
        <item name="buttonBarPositiveButtonStyle">@style/Alert_delete_button_positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert_delete_button_neutral</item>
    </style>
    <style name="Alert_delete_button_positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
    <style name="Alert_delete_button_neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <!-- Alert dialog info theme. -->
    <style name="Alert_dialog_info">
        <item name="buttonBarPositiveButtonStyle">@style/Alert_info_button_positive</item>
    </style>
    <style name="Alert_info_button_positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>



</resources>